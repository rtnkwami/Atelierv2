{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "src",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@auth/*": ["modules/auth/*"],
      "@auth/routes":  ["modules/auth/auth.routes"],
      "@auth/models": ["modules/auth/models/index"]
    },
    "moduleResolution": "nodenext",
    "module": "nodenext",
  },
  "extends": "../tsconfig.base.json",
  "include": ["./src/**/*.ts", "prisma.config.ts"]
}
